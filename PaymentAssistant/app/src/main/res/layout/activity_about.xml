<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.apptech.yohannes.paymentassistant.activities.About"
    android:weightSum="1"
    android:baselineAligned="false">

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnAbout"
        android:src="@drawable/assistant"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:contentDescription="@string/title_activity_camera"
        android:cropToPadding="false"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:scaleType="fitCenter"
        android:accessibilityLiveRegion="polite"
        android:background="#00ff7c00" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_app"
        android:typeface="normal"
        android:textSize="30dp"
        android:singleLine="false"
        android:password="false"
        android:phoneNumber="false"
        android:linksClickable="false"
        android:textColor="@color/dark"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="normal"
        android:textSize="15dp"
        android:singleLine="false"
        android:password="false"
        android:phoneNumber="false"
        android:linksClickable="false"
        android:textColor="@color/dark"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:id="@+id/txtMessage"
        android:autoLink="email" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:id="@+id/btnContact"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

</LinearLayout>
